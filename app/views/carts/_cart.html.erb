<% if session[:user_id] %>
<h3>Your Spinbike Cart</h3>
<table>
  <%= render(cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price, :unit => "€") %></td>
  </tr>
</table>
<div>
  <br/>
    <%=  button_to 'Checkout', new_order_path, method: :get %>
    <%=  button_to 'Empty Cart', cart, method: :delete, data: {confirm: 'Are you sure?'}  %>
  <hr/>
</div>
  <% else %>
    <h3>Please login to purchase these items</h3>
    <table>
      <%= render(cart.line_items) %>
      <tr class="total_line">
        <td colspan="2">Total</td>
        <td class="total_cell"><%= number_to_currency(cart.total_price, :unit => "€") %></td>
      </tr>
    </table>
    <div>
      <br/>
    <% if session[:user_id] %>
      <%=  link_to 'Click here to login', login_path %><br/><br/>
      <%=  button_to 'Empty Cart', cart, method: :delete, data: {confirm: 'Are you sure?'}  %>
      <hr/>
    <% else %>
      <%= link_to 'Customer Login', login_path %>
    <% end %>
    </div>
<% end %>
